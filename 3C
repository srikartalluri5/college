<!-- index.html -->
<!DOCTYPE html>
<html>
<head>
    <title>CSS Style Levels Example</title>

    <!-- External CSS -->
    <link rel="stylesheet" type="text/css" href="styles.css">

    <!-- Internal CSS -->
    <style>
        /* Internal CSS */
        h2 {
            color: blue;             /* Selector: h2 | Property: color | Value: blue */
            text-align: center;      /* Selector: h2 | Property: text-align | Value: center */
        }
    </style>
</head>
<body>

  
    <h1 style="color: red; font-size: 30px;">
        This is Inline Style Example
    </h1>
  

    <h2>This is Internal Style Example</h2>

    <p>This paragraph uses External Style.</p>

</body>
</html>
